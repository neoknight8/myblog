   <%= form_for [@article,@comment] do |f| %>
      <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      </p>
      <p>
      <%=f.label :text %><br>
      <%=f.text_area :text ,:size => "50x3" %><br>
         <% if @comment.errors.any? %>
            <% @comment.errors.full_messages.each do |message| %>
            <%=message %><br>
         <% end %>
   <% end %>
      </p>
   <p>
      <%= f.submit %> 
   </p>
   <% end %>