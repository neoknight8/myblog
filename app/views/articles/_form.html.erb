<%= form_for @article do |f| %>
   <ul>
      <% if @article.errors.any? %>
      <% @article.errors.full_messages.each do |message| %>
      <li><%=message %></li>
      <% end %>
      <% end %>
   </ul>

<p>
   <%= f.label :title %><br>
   <%= f.text_field :title %>
</p>
<p>
   <%=f.label :text %><br>
   <%=f.text_area :text ,:size => "50x30" %><br>
</p>

<p>
   <%= f.submit %> 
</p>

<% end %>